<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alsamei.soft">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="السامعي سوفت"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity 
            android:name=".ui.InventoryActivity"
            android:label="المخزن"
            android:windowSoftInputMode="adjustPan" />

        <activity 
            android:name=".ui.SalesActivity"
            android:label="فاتورة مبيعات"
            android:windowSoftInputMode="adjustPan" />

        <activity 
            android:name=".ui.PurchasesActivity"
            android:label="فاتورة مشتريات"
            android:windowSoftInputMode="adjustPan" />

        <activity 
            android:name=".ui.ReportsActivity"
            android:label="التقارير المالية" />

        <activity 
            android:name=".ui.AccountsActivity"
            android:label="كشف حساب"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".ui.SetupActivity" />

    </application>
</manifest>
