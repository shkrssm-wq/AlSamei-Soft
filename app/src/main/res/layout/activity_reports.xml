<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الخلاصة المالية (السامعي سوفت)"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:textColor="#1A237E"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:padding="15dp" android:elevation="4dp" android:orientation="horizontal" android:layout_marginBottom="10dp">
        <TextView android:id="@+id/tvTotalSales" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0" android:textSize="18sp" android:textColor="#2E7D32" android:textStyle="bold"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="إجمالي المبيعات: " android:gravity="right" android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:padding="15dp" android:elevation="4dp" android:orientation="horizontal" android:layout_marginBottom="10dp">
        <TextView android:id="@+id/tvTotalPurchases" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0" android:textSize="18sp" android:textColor="#C62828" android:textStyle="bold"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="إجمالي المشتريات: " android:gravity="right" android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#FFFFFF" android:padding="15dp" android:elevation="4dp" android:orientation="horizontal" android:layout_marginBottom="10dp">
        <TextView android:id="@+id/tvTotalExpenses" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0" android:textSize="18sp" android:textColor="#F57C00" android:textStyle="bold"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="إجمالي المصاريف: " android:gravity="right" android:textSize="16sp"/>
    </LinearLayout>

    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#1A237E" android:layout_marginVertical="15dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#1A237E" android:padding="20dp" android:elevation="8dp" android:orientation="horizontal">
        <TextView android:id="@+id/tvNetProfit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0.0" android:textSize="24sp" android:textColor="#FFFFFF" android:textStyle="bold"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="صافي الأرباح: " android:gravity="right" android:textSize="18sp" android:textColor="#FFFFFF"/>
    </LinearLayout>

</LinearLayout>
